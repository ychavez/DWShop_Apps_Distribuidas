<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DWShop.Client.Mobile.Views.PropductListView"
             Title="PropductListView">
    <VerticalStackLayout>
        <ActivityIndicator Color="Blue" IsRunning="False"/>
        <ListView IsPullToRefreshEnabled="True" IsRefreshing="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Image Aspect="AspectFill"></Image>

                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Nombre"/>
                                <Label Text="Precio"/>
                            </VerticalStackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>