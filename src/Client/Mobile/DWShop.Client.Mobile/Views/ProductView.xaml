<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DWShop.Client.Mobile.Views.ProductView"
             Title="ProductView">
    <VerticalStackLayout>
        <Image Source="{Binding Product.PhotoURL}" HeightRequest="200"/>

        <Label Text="{Binding Product.ProductName}" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"
               Margin="10"/>

        <Label Text="{Binding Product.Price, StringFormat='Precio: {0:C}'}" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"
               Margin="10"/>

        <Button Text="Agregar a canasta"/>

    </VerticalStackLayout>
</ContentPage>