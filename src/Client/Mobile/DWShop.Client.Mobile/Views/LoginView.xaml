             x:Class="DWShop.Client.Mobile.Views.LoginView"
             Title="LoginView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Source="Images/dotnet_bot" HorizontalOptions="Center" VerticalOptions="Center"/>

        <VerticalStackLayout Grid.Row="1" Margin="20">
            <Entry Placeholder="Usuario" Text="{Binding LoginModel.UserName}"/>
            <Entry Placeholder="ContraseÃ±a" IsPassword="True" Text="{Binding LoginModel.Password}"/>
        </VerticalStackLayout>

        <Button Text="Iniciar sesion" Grid.Row="2" Command="{Binding LoginCommand}" />

    </Grid>

</ContentPage>